<div class="modal fade" id="new_survey_screen_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
    	<%= form_for survey_screen, remote: true  do |f| %>
        <%= f.hidden_field :survey_type_id , value: params[:survey_type_id]%>
      <div class="modal-header">
        <h4 class="modal-title" id="exampleModalLabel">Welcome Screen</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="form-group">
        	<%= f.label :long_text, 'Long Text', class: 'control-label' %>
    			<%= f.text_field :long_text, class: 'form-control' %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= f.submit "Submit", class: 'btn btn-primary' %>
      </div>
      <% end %>
    </div>
  </div>
</div>