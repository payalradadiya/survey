<div>
  <div class="panel panel-default" draggable="true" id="js-survey-question-raw-<%= survey_question.id %>">
    <div class="panel-heading portlet-handler">
      <h3 class="panel-title"><%= survey_question.order %></h3>
    </div>
    <div class="panel-body">
      <%= survey_question.question_title %>
    </div>
  </div>
</div>

<script>
	$(function(){
var sPositions = localStorage.positions || "{}",
    positions = JSON.parse(sPositions);
$.each(positions, function (id, pos) {
    $("#" + id).css(pos)
})
$("#js-survey-question-raw-<%= survey_question.id %>").draggable({
    containment: "#containment-wrapper",
    scroll: false,
    stop: function (event, ui) {
        positions[this.id] = ui.position
        localStorage.positions = JSON.stringify(positions)
    }
});
});
</script>
