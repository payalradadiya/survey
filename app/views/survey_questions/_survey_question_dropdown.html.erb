<div class="modal fade" id="new_survey_question_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="row">
        <div class="col-md-6">
        	<%= form_for survey_question, remote: true do |f| %>
            <%#= form_tag("/duration_stat", method: "get", remote: true) do %>
            <%= f.hidden_field :survey_type_id , value: params[:survey_type_id]%>
          <div class="modal-header">
            <h4 class="modal-title" id="exampleModalLabel">Dropdown</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <div class="form-group">
            	<%= f.label :question_title, 'Question', class: 'control-label' %>
        			<%= f.text_field :question_title, class: 'form-control', id: "dropdown_question"%>
            </div>

            <div class="form-group">
              <%= f.label :question_hint, 'Hint', class: 'control-label' %>
              <%= f.text_field :question_hint, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :choice, 'Choice', class: 'control-label' %>
              <%= f.text_area :choice, class: 'form-control', id: "choice_question" %>
            </div>

            <div class="form-group">
              <%= f.label :is_required, "Required",class: 'control-label' %>&nbsp;&nbsp;
              <label class="switch-left">
                <%= f.check_box :is_required %>
                <span></span>
              </label>
            </div>

          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <%= f.submit "Submit", class: 'btn btn-primary' %>
          </div>
          <% end %>
        </div>
        <div class="col-md-6">
          <div class="col-md-2"></div>
          <div class="col-md-4">
            <div class="jumbotron" id="question_space">
              <div class="dropdown_question"></div>
              <div class="choice_question">
                <ul></ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $("#dropdown_question").keyup(function(){
    // console.log($("#question").val());
    $(".dropdown_question").empty().append($('#dropdown_question').val());
  });
  $("#choice_question").keyup(function(){
     console.log($("#choice_question").val());
    $(".choice_question").empty().append($('#choice_question').val());
  });
</script>